@model List<SliderInfoVM>
@{
    ViewData["Title"] = "Slider Info";
}

<style>
    .status-slider {
        width: 25px;
        height: 25px;
        border-radius: 50%;
        cursor: pointer;
    }

    .status-true {
        background-color: greenyellow;
    }

    .status-false {
        background-color: red;
    }
</style>

<div class="container my-3">
    <h2 class="text-center">Sliders</h2>
    <div class="create-btn ">
        <a asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        SignImage
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Create Date
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sliderInfo in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/img/@sliderInfo.SignImage" alt="image" style="width:75px;height:75px;" />
                        </td>
                        <td>
                            @sliderInfo.Title
                        </td>
                        <td>
                            <div class="status-slider @(sliderInfo.Status ? "status-true":"status-false")"></div>
                        </td>
                        <td>
                            @sliderInfo.CreateDate
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@sliderInfo.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-action="Edit" asp-route-id="@sliderInfo.Id" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                            <form class="d-block" method="post" asp-action="Delete" asp-route-id="@sliderInfo.Id">
                                <button type="submit" class="btn btn-danger btn-rounded btn-fw">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

