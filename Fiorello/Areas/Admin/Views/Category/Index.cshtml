@model List<CategoryVM>
@{
    ViewData["Title"] = "Category";
}

<div class="container my-3">
    <h2 class="text-center">Sliders</h2>
    <div class="create-btn ">
        <a asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                            <form method="post" asp-action="SoftDelete" style="display:inline-block;" asp-route-id="@category.Id"> 
                                <button class="btn btn-danger btn-rounded btn-fw">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

